@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
  <MudAppBar Elevation="0">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <MudSpacer />
    <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Link="fb://page?id=ChoctawIndianFair" Target="_blank" />
    <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Link="https://twitter.com/ChoctawIndianF" Target="_blank" />
    <MudIconButton Icon="@Icons.Custom.Brands.Instagram" Link="https://www.instagram.com/choctawindianfair/"
      Target="_blank" />
    <MudIconButton Icon="@Icons.Custom.Brands.YouTube" Link="https://www.youtube.com/channel/UCY8YJ9Z1ZQ9Z1Z1Z1Z1Z1Z1"
      Target="_blank" />
    <MudChip Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Warning" Style="color:black;" Disabled="true">Buy
      Tickets</MudChip>
  </MudAppBar>
  <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
    <MudDrawerHeader Style="min-height=250px;">
      <MudLink Href="/">
        <MudImage Fluid="true" Src="https://www.choctawindianfair.com/cif-blazor/img/logos/icon.webp"
          Alt="Choctaw Indian Fair" />
      </MudLink>
    </MudDrawerHeader>
    <NavMenu />
  </MudDrawer>
  <MudMainContent>
    @Body
  </MudMainContent>
</MudLayout>

@code {
  bool _drawerOpen = true;

  void DrawerToggle()
  {
    _drawerOpen = !_drawerOpen;
  }
}
